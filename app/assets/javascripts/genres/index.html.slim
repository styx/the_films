div.layout-content(layout='column' layout-fill layout-align='center center')
  .md-whiteframe-z1.table-responsive-vertical(flex layout-fill)
    table.table.table-hover
      thead
        tr
          th ID
          th Name

      tbody
        tr(ng-repeat='genre in vm.genres')
          td(data-title='ID')
            | {{ genre.id }}
          td(data-title='Name'
            contenteditable
            ng-model='genre.name'
            select-non-editable='true'
            no-line-breaks='true')

  .actions(flex layout='row')
    md-button.md-primary ui-sref='#' New Genre
