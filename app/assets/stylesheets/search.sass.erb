$height: 34px

st-search
  position: relative
  input
    border: 0
    height: $height
    line-height: $height
    padding: 0 40px
    font-size: 18px
    margin: 12px
    border-radius: $height / 2
    @include filter(invert(100%))
    background-image: url(<%= image_path('search.svg') %>)
    background-repeat: no-repeat
    background-position: 10px center
    color: rgba(11, 11, 11, 0.90)
    background-color: rgba(0, 0, 0, 0.26)
  button.md-button
    padding: 0
    position: absolute
    top: $height / 2 + 1
    right: 24px
    md-icon
      width: 20px
      height: 20px
